require "pathname"
ENV["BUNDLE_GEMFILE"] ||= File.expand_path("../../Gemfile",
  Pathname.new(__FILE__).realpath)

require "rubygems"
require "bundler/setup"

# Restart Guard when Guardfile is changed (see https://github.com/guard/guard/wiki/Guard-2.10.3-exits-when-Guardfile-is-changed)
while !system(Gem.bin_path('guard', 'guard')) && $?.exitstatus == 2
  puts('Restarting guard...')
end
exit($?.exitstatus)
